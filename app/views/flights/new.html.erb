<h1>New Flight</h1>

<%= form_with scope: :flight, url: flights_path, local: true do |form| %>


<select>
<%= @responses.each do |response| %>
	<option><%= response.name %></option>
<% end %>
</select>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>


	<%= link_to 'Back', root_path %>
<% end %>