<h1><%= @expense.trip.name %></strong></h1>
<br>
<h2>Edit</h2>
<%= form_with scope: :expense, local: true do |form| %>
<br>
  <p>
    <%= form.label :details, 'Exp Details' %><br>
    	<%= form.text_field :details %>
  </p>

  <p>
    <%= form.label :amount, "$'s" %><br>
    	<%= form.number_field :amount %>
  </p>

	<p>
	<%= form.label :category_id, 'Category' %><br>
    <%= form.collection_select :category_id, @categories, :id, :name, include_blank: true %>
  </p>

  <p>
    <%= form.label :spent, 'Paid' %>
    <%= form.check_box :spent %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<br/>
<%= link_to 'Back', expenses_path, class: 'btn btn-primary' %>