<h1>New Expense</h1>

<div class="container">
<%= form_with scope: :expense, url: expenses_path, local: true do |form| %>

	<input type="hidden" value="<%= @trip.id %>" name="expense[trip_id]"></input>

	<div class="form-row">
		<div class="col-9 col-lg-6">
			<label>Trip</label>
			<input class="form-control form-control-lg" value="<%= @trip.name %>" disabled/>
		</div>
	</div>

	<br />

	<div class="form-row">
		<div class="col-9 col-lg-6">
			<label>Expenses Details</label>
			<%= form.text_field :details, class: "form-control form-control-lg" %>
		</div>

		<div class="col-3 col-lg-6">
			<label>Amount</label>
			<%= form.number_field :amount, class: "form-control form-control-lg" %>
		</div>
	</div>

	<br />

	<div class="form-row">
		<div class="col-9 col-lg-6">
			<label>Category</label>
			<%= form.collection_select :category_id, @categories, :id, :name,{prompt: "Select category"}, {class: "form-control form-control-lg"} %>
		</div>

		<div class="form-group form-check" id="paidCheck">
			<div class="col-3 col-lg-6">
				 <%= form.check_box :spent, class: "form-check-input" %>
				 <label>Paid</label>
			</div>
		</div>
	</div>

	<br />

	<button type="submit" class="buttons">Confirm</button>
<% end %>

	<br />
	<footer>
			<%= link_to image_tag("icons/back.png", class: "icons-trips"), expenses_path %>
		</footer>
</div>