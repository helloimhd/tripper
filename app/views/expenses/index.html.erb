<p id="notice"><%= notice %></p>
<br>
<h1><%= @trip.name %></h1>
<br>
<br>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-3">
			<h6>Paid: </h6>
			<h6>Unpaid: </h6>
			<h6>Total Spend: </h6>
		</div>
		<div class="col-3">
			<h6>$ <%= @paid %></h6>
			<h6>$ <%= @unpaid %></h6>
			<h6>$ <%= @spend %></h6>
		</div>
	</div>
</div>

<br>
<h4> Paid Exp</h4>
<table class="table table-sm table-hover">
  <thead class="thead-dark">
	<tr>
	  <th scope="col">Details</th>
	  <th scope="col">Amount</th>
	  <th scope="col">Category</th>
	  <th colspan="3"></th>
	</tr>
  </thead>

  <tbody>
	<% @expenses.each do |expense| %>
		<%if expense.spent == true %>
	  <tr>
		<td scope="row"><%= expense.details %></td>
		<td scope="row">$<%= expense.amount %></td>
		<td scope="row"><%= expense.category.name %></td>
		<td><%= link_to 'Edit', edit_expense_path(expense) %></td>
		<td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <%else %>
	  <p> </p>
	  <% end %>
	<% end %>
  </tbody>
</table>
<br>
<h4> Unpaid Exp</h4>
<table class="table table-sm table-hover">
  <thead class="thead-dark">
	<tr>
	  <th scope="col">Details</th>
	  <th scope="col">Amount</th>
	  <th scope="col">Category</th>
	  <th colspan="3"></th>
	</tr>
  </thead>

  <tbody>
	<% @expenses.each do |expense| %>
		<%if expense.spent == false %>
	  <tr>
		<td scope="row"><%= expense.details %></td>
		<td scope="row">$ <%= expense.amount %></td>
		<td scope="row"><%= expense.category.name %></td>
		<td><%= link_to 'Edit', edit_expense_path(expense) %></td>
		<td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	  <%else %>
	  <p> </p>
	  <% end %>
	<% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Exp', new_expense_path %>
